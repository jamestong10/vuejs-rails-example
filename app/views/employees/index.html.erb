<h1>Emplyee</h1>

<div id="employees">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Manager</th>
      </tr>
    </thead>

    <tbody>
      <tr
        is="employee-row"
        v-for="employee in employees"
        :employee="employee">
      </tr>
      <tr>
        <td>
          <input type="text" v-model="employee.name">
          <span>{{ errors.name }}</span>
        </td>
        <td>
          <input type="text" v-model="employee.email">
          <span>{{ errors.email }}</span>
        </td>
        <td>
          <input type="checkbox" v-model="employee.manager">
        </td>
        <td>
          <button @click="hireEmployee">Hire Employee</button>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<script type="text/x-template" id="employee-row">
  <tr v-if="editMode">
    <td>
        <input type="text" v-model="employee.name">
        <span style="color:red">{{ errors.name }}</span>
    </td>
    <td>
        <input type="text" v-model="employee.email">
        <span style="color:red">{{ errors.email }}</span>
    </td>
    <td>
      <input type="checkbox" v-model="employee.manager">
    </td>
    <td>
      <button v-if="editMode" @click="updateEmployee">Save</button>
    </td>
  </tr>
  <tr v-if="!editMode">
    <td>{{ employee.name }}</td>
    <td>{{ employee.email }}</td>
    <td><input type="checkbox" v-model="employee.manager" disabled=true></td>
    <td>
      <button @click="editMode = true">Edit Employee</button>
      <button @click="toggleManagerStatus">{{ employee.manager ? 'demote' : 'promote'}}</button>
      <button @click="fireEmployee">Fire!</button>
    </td>
  </tr>
</script>
